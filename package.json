{
  "name": "elitesoftware-client",
  "description": "EliteSoftware Client Application",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "cross-env NODE_ENV=development vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:build": "vite build && electron-builder",
    "start": "npm run electron:dev"
  },
  "dependencies": {
    "@google/genai": "^1.10.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "cross-env": "^7.0.3",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.elitesoftware.client",
    "productName": "EliteSoftware Client",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.cjs",
      "preload.cjs"
    ],
    "win": {
      "target": "nsis",
      "icon": "EliteSoftware-Client.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
